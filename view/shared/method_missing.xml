<response>
  <?if($errors):?>
    <errors>
    <?foreach($errors as $error):?>
      <error>
        <?=partial("array", array("root"=>$error, "root_name"=>"error"), "xml")?>
      </error>
    <?endforeach?>
    </errors>
  <?else:?>
    <count><?=count($model)?></count>
    <results>
      <?foreach($model as $row):?>
        <result>
          <?=partial("model", array("row"=>$row), "xml")?>
        </result>
      <?endforeach?>
    </results>
  <?endif?>
</response>