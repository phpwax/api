<response>
  <?if($errors):?>
    <errors>
    <?foreach($errors as $error):?>
      <error>
        <?=partial("array", array("root"=>$error, "root_name"=>"error"), "xml")?>
      </error>
    <?endforeach?>
    </errors>
  <?else:?>
    <?if($model instanceof WaxPaginatedRecordset):?>
    <per_page><?=$model->per_page?></per_page>
    <current_page><?=$model->current_page?></current_page>
    <total_pages><?=$model->total_pages?></total_pages>
    <?endif?>
    <count><?=$model->count()?></count>
    <results>
      <?foreach($model as $row):?>
        <result>
          <?=partial("model", array("row"=>$row), "xml")?>
        </result>
      <?endforeach?>
    </results>
  <?endif?>
</response>